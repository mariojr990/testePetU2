<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"

    >
    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Petshop.Cad_do_Pet_Activity">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/Cor_botoes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logobrancopet2u_cadPet"
                android:layout_width="81dp"
                android:layout_height="34dp"
                android:contentDescription="@string/logo_pet2u"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.02"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ptlogobranco" />

            <Button
                android:id="@+id/botaoVoltarCadPetshop"
                android:layout_width="34dp"
                android:layout_height="32dp"
                android:background="@drawable/pngtree_exit_icon_vectors_png_image_1737870"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/txtCadPet03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-thin"
            android:text="@string/Title_cadastro_petshop"
            android:textSize="46sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

        <TextView
            android:id="@+id/txtCadPet04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subtitle_cad_petshop"
            android:textSize="12sp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCadPet03" />

        <EditText
            android:id="@+id/inputNomePetshop"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/Input_nome"
            android:inputType="textPersonName"
            android:maxLength="50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCadPet04" />

        <EditText
            android:id="@+id/inputRazaoSocialPetshop2"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/Input_razao_social"
            android:inputType="textPersonName"
            android:maxLength="50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputNomePetshop" />

        <EditText
            android:id="@+id/inputEmail_Petshop"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginStart="26dp"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="26dp"
            android:layout_marginRight="26dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/input_email"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/inputRazaoSocialPetshop2" />

        <EditText
            android:id="@+id/inputCnpjPetshop"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/input_cnpj"
            android:inputType="number"
            android:maxLength="14"
            app:layout_constraintEnd_toEndOf="@+id/inputEmail_Petshop"
            app:layout_constraintStart_toStartOf="@+id/inputEmail_Petshop"
            app:layout_constraintTop_toBottomOf="@+id/inputEmail_Petshop" />

        <EditText
            android:id="@+id/inputTelefonePetshop"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_marginTop="5dp"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/input_telefone"
            android:inputType="phone"
            android:maxLength="11"
            app:layout_constraintEnd_toEndOf="@+id/inputCnpjPetshop"
            app:layout_constraintStart_toStartOf="@+id/inputCnpjPetshop"
            app:layout_constraintTop_toBottomOf="@+id/inputCnpjPetshop" />

        <Button
            android:id="@+id/botaoProximoPetshop"
            android:layout_width="244dp"
            android:layout_height="47dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="28dp"
            android:background="@color/Cor_botoes"
            android:text="Próximo"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout4"
            app:layout_constraintStart_toStartOf="@+id/linearLayout4"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
            app:layout_constraintVertical_bias="0.0" />

        <LinearLayout
            android:id="@+id/linearLayout4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="@+id/inputTelefonePetshop"
            app:layout_constraintStart_toStartOf="@+id/inputTelefonePetshop"
            app:layout_constraintTop_toBottomOf="@+id/inputTelefonePetshop">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="5dp"
                android:text="Horário de funcionamento:" />

            <EditText
                android:id="@+id/data_funcionamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:hint="Segunda a Sexta"
                android:inputType="textPersonName"
                android:maxLength="40" />

            <EditText
                android:id="@+id/horario_funcionamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:hint="7:00 - 18:00"
                android:inputType="textPersonName"
                android:maxLength="40" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
