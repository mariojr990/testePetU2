<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/Descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        tools:context=".Petshop.PerfilPet1Activity">

        <ImageView
            android:id="@+id/logoPerfilusuario2"
            android:layout_width="0dp"
            android:layout_height="327dp"
            android:contentDescription="@string/logo_pet2u"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pet2ulogoperfil" />

        <ImageView
            android:id="@+id/avatarPerfilUsuario2"
            android:layout_width="145dp"
            android:layout_height="106dp"
            android:layout_marginTop="165dp"
            android:contentDescription="@string/descricao_avatar_do_usuario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/logoPerfilusuario2"
            app:srcCompat="@drawable/pet2uiconeavatar" />

        <TextView
            android:id="@+id/nome_petshop_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nome_petshop_perfil"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarPerfilUsuario2" />

        <TextView
            android:id="@+id/email_petshop_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="@string/input_email"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.501"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarPerfilUsuario2" />

        <TextView
            android:id="@+id/descricao_petshop_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="#FFFFFF"
            android:justificationMode="inter_word"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/Descricao_petshop"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoPerfilusuario2"
            app:layout_constraintVertical_bias="0.178"
            tools:targetApi="o" />

        <TextView
            android:id="@+id/Descricao_pet_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="3dp"
            android:text="@string/Title_descricao_petshop"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="22sp"
            app:layout_constraintBottom_toTopOf="@+id/descricao_petshop_perfil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoPerfilusuario2"
            app:layout_constraintVertical_bias="0.425" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="28dp"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/descricao_petshop_perfil">

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/botao_novo_servico"
                android:textSize="18sp" />

            <Switch
                android:id="@+id/tipoCadastro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_novo_produto"
                android:textSize="18sp" />
        </LinearLayout>

        <Button
            android:id="@+id/tipoCadastroProduto"
            android:layout_width="206dp"
            android:layout_height="43dp"
            android:background="@color/Cor_botoes"
            android:text="@string/botao_cadastrar_novo_produto"
            android:textColor="#FFFFFF"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.264"
            tools:visibility="visible" />

        <Button
            android:id="@+id/tipoCadastroServico"
            android:layout_width="206dp"
            android:layout_height="43dp"
            android:background="@color/Cor_botoes"
            android:text="@string/botao_cadastrar_novo_servico"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layout_constraintVertical_bias="0.264" />

        <Button
            android:id="@+id/sairLogout"
            android:layout_width="128dp"
            android:layout_height="25dp"
            android:layout_marginEnd="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginBottom="24dp"
            android:background="@color/Cor_botoes_vermelhos"
            android:text="@string/botao_logout"
            android:textColor="#FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>