<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/idadePetAdocao"
        android:layout_width="271dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:text="Idade do Pet"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/nomePetAdocao"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nomePetAdocao"
        app:layout_constraintTop_toBottomOf="@+id/nomePetAdocao" />

    <TextView
        android:id="@+id/descricaoPetAdocao"
        android:layout_width="271dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:text="Descrição Pet Adoção"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/idadePetAdocao"
        app:layout_constraintTop_toBottomOf="@+id/idadePetAdocao" />

    <ImageView
        android:id="@+id/fotoPetAdocao"
        android:layout_width="93dp"
        android:layout_height="89dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pet2ulogoapp" />

    <TextView
        android:id="@+id/nomePetAdocao"
        android:layout_width="267dp"
        android:layout_height="27dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="36dp"
        android:layout_marginRight="36dp"
        android:singleLine="false"
        android:text="Nome Pet Adocao"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fotoPetAdocao"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>