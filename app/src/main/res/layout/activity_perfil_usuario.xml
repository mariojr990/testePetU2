<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PerfilUsuarioActivity">

    <ImageView
        android:id="@+id/logoPerfilusuario"
        android:layout_width="415dp"
        android:layout_height="327dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pet2ulogoperfil" />

    <ImageView
        android:id="@+id/avatarPerfilUsuario"
        android:layout_width="145dp"
        android:layout_height="106dp"
        android:layout_marginTop="165dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pet2uiconeavatar" />

    <TextView
        android:id="@+id/nomeCompletoUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome Completo"
        android:textColor="@android:color/background_light"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/avatarPerfilUsuario" />

    <ImageView
        android:id="@+id/backgroundEdit1"
        android:layout_width="269dp"
        android:layout_height="68dp"
        android:layout_marginTop="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoPerfilusuario"
        app:srcCompat="@drawable/pet2uobackgroundoptionseditarperfil" />

    <ImageView
        android:id="@+id/backgroundEdit2"
        android:layout_width="269dp"
        android:layout_height="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundEdit1"
        app:srcCompat="@drawable/pet2uobackgroundoptionseditarperfil" />

    <ImageView
        android:id="@+id/backgroundEdit3"
        android:layout_width="269dp"
        android:layout_height="68dp"
        android:layout_marginBottom="158dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backgroundEdit2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/pet2uobackgroundoptionseditarperfil" />

    <Button
        android:id="@+id/botaoEdit1"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/botao_edit_perfil"
        app:layout_constraintEnd_toEndOf="@+id/backgroundEdit1"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/backgroundEdit1"
        app:layout_constraintTop_toTopOf="@+id/backgroundEdit1" />

    <Button
        android:id="@+id/botaoEdit2"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/botao_edit_perfil"
        app:layout_constraintEnd_toEndOf="@+id/backgroundEdit2"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/backgroundEdit2"
        app:layout_constraintTop_toTopOf="@+id/backgroundEdit2" />

    <Button
        android:id="@+id/botaoEdit3"
        android:layout_width="36dp"
        android:layout_height="30dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/botao_edit_perfil"
        app:layout_constraintEnd_toEndOf="@+id/backgroundEdit3"
        app:layout_constraintHorizontal_bias="0.051"
        app:layout_constraintStart_toStartOf="@+id/backgroundEdit3"
        app:layout_constraintTop_toBottomOf="@+id/backgroundEdit2" />

    <TextView
        android:id="@+id/editarTelefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Alterar Telefone"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundEdit1"
        app:layout_constraintStart_toEndOf="@+id/botaoEdit1"
        app:layout_constraintTop_toTopOf="@+id/backgroundEdit1" />

    <TextView
        android:id="@+id/editarEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Alterar Email"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundEdit2"
        app:layout_constraintStart_toEndOf="@+id/botaoEdit2"
        app:layout_constraintTop_toTopOf="@+id/backgroundEdit2" />

    <TextView
        android:id="@+id/editarSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Alterar Senha"
        android:textColor="@android:color/background_light"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/backgroundEdit3"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toEndOf="@+id/botaoEdit3"
        app:layout_constraintTop_toBottomOf="@+id/backgroundEdit2" />

</androidx.constraintlayout.widget.ConstraintLayout>