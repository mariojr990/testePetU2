<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Usuario.PerfilUsuario_Activity">

        <ImageView
            android:id="@+id/logoPerfilusuario"
            android:layout_width="0dp"
            android:layout_height="327dp"
            android:contentDescription="@string/logo_pet2u"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.666"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pet2ulogoperfil" />

        <ImageView
            android:id="@+id/avatarPerfilUsuario"
            android:layout_width="145dp"
            android:layout_height="106dp"
            android:layout_marginTop="165dp"
            android:contentDescription="@string/descricao_avatar_do_usuario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pet2uiconeavatar" />

        <TextView
            android:id="@+id/nomeCompletoUsuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Input_nome"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarPerfilUsuario" />

        <TextView
            android:id="@+id/editarEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/input_email"
            android:textColor="@android:color/background_light"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avatarPerfilUsuario" />

        <ImageView
            android:id="@+id/backgroundEdit1"
            android:layout_width="269dp"
            android:layout_height="68dp"
            android:layout_marginTop="42dp"
            android:contentDescription="@string/fundo_editar_usuario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoPerfilusuario"
            app:srcCompat="@drawable/pet2uobackgroundoptionseditarperfil" />

        <ImageView
            android:id="@+id/backgroundEdit3"
            android:layout_width="269dp"
            android:layout_height="68dp"
            android:contentDescription="@string/fundo_editar_usuario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/backgroundEdit1"
            app:srcCompat="@drawable/pet2uobackgroundoptionseditarperfil" />

        <Button
            android:id="@+id/botaoAlterarTelefone"
            android:layout_width="36dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/botao_edit_perfil"
            app:layout_constraintEnd_toEndOf="@+id/backgroundEdit1"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="@+id/backgroundEdit1"
            app:layout_constraintTop_toTopOf="@+id/backgroundEdit1" />

        <Button
            android:id="@+id/botaoAlterarSenha"
            android:layout_width="36dp"
            android:layout_height="30dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/botao_edit_perfil"
            app:layout_constraintEnd_toEndOf="@+id/backgroundEdit3"
            app:layout_constraintHorizontal_bias="0.051"
            app:layout_constraintStart_toStartOf="@+id/backgroundEdit3"
            app:layout_constraintTop_toBottomOf="@+id/backgroundEdit1" />

        <TextView
            android:id="@+id/editarTelefone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="@string/txt_alterar_telefone"
            android:textColor="@android:color/background_light"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/backgroundEdit1"
            app:layout_constraintStart_toEndOf="@+id/botaoAlterarTelefone"
            app:layout_constraintTop_toTopOf="@+id/backgroundEdit1" />

        <TextView
            android:id="@+id/editarSenha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="@string/txt_alterar_senha"
            android:textColor="@android:color/background_light"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="@+id/backgroundEdit3"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toEndOf="@+id/botaoAlterarSenha"
            app:layout_constraintTop_toBottomOf="@+id/backgroundEdit1" />

        <Button
            android:id="@+id/botao_logout"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:background="@color/Cor_botoes_vermelhos"
            android:text="@string/botao_logout"
            android:textColor="@color/design_default_color_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/backgroundEdit3"
            app:layout_constraintHorizontal_bias="0.61"
            app:layout_constraintStart_toStartOf="@+id/backgroundEdit3"
            app:layout_constraintTop_toBottomOf="@+id/backgroundEdit3" />

        <TextView
            android:id="@+id/nome_petshop_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/input_telefone"
            app:layout_constraintEnd_toEndOf="@+id/backgroundEdit1"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintStart_toStartOf="@+id/backgroundEdit1"
            app:layout_constraintTop_toTopOf="@+id/backgroundEdit1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
