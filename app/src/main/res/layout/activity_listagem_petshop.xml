<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListagemPetshopActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/pet2ulogo"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-234dp" />

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="326dp"
        android:layout_height="42dp"
        android:gravity="center"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="185dp" />

    <LinearLayout
        android:id="@+id/caixaPetshop"
        android:layout_width="416dp"
        android:layout_height="102dp"
        android:background="@drawable/bg_petshop"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="242dp">

        <LinearLayout
            android:id="@+id/layoutHorizontal"
            android:layout_width="400dp"
            android:layout_height="116dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/layoutFoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/pet2ulogoapp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNome"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/textNomePet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nome do Petshop" />

                <TextView
                    android:id="@+id/textDescPet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Descrição do Petshop" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/caixaPetshop2"
        android:layout_width="416dp"
        android:layout_height="102dp"
        android:background="@drawable/bg_petshop"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="358dp">

        <LinearLayout
            android:id="@+id/layoutHorizontal"
            android:layout_width="400dp"
            android:layout_height="116dp"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:id="@+id/layoutFoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/pet2ulogoapp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNome2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:paddingLeft="8dp">

                <TextView
                    android:id="@+id/textNomePet2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nome do Petshop" />

                <TextView
                    android:id="@+id/textDescPet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Descrição do Petshop" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>