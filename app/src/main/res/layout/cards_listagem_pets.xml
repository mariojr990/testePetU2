<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutPets"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tituloCategoriaPet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="30dp"
        android:text="Título Categoria"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nomePet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="6dp"
        android:singleLine="false"
        android:text="Nome Pet"
        android:textColor="@android:color/tertiary_text_light"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imagemPet"
        app:layout_constraintTop_toBottomOf="@+id/tituloCategoriaPet" />

    <TextView
        android:id="@+id/generoPet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:singleLine="false"
        android:text="Genero Pet"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@+id/nomePet"
        app:layout_constraintStart_toStartOf="@+id/nomePet"
        app:layout_constraintTop_toBottomOf="@+id/nomePet" />

    <TextView
        android:id="@+id/castradoPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:text="Castrado Status"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imagemPet"
        app:layout_constraintTop_toBottomOf="@+id/generoPet"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/racaPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Raça Pet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/nomePet"
        app:layout_constraintTop_toBottomOf="@+id/tituloCategoriaPet" />

    <TextView
        android:id="@+id/nascimentoPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="Ano de nascimento"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/generoPet" />

    <ImageView
        android:id="@+id/imagemPet"
        android:layout_width="93dp"
        android:layout_height="89dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloCategoriaPet"
        app:srcCompat="@drawable/pet2ulogoapp" />

    <View
        android:id="@+id/dividerPetBaixo2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valorProduto2" />

</androidx.constraintlayout.widget.ConstraintLayout>